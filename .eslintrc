ecmaFeatures:
    ecmascript: 6

env:
    amd: true
    browser: true
    node: true
    es6: true

globals:
    requirejs: true

rules:
    # Possible errors
    no-console: 1
    no-extra-parens: 0
    no-irregular-whitespace: 2
    quote-props: [2, 'as-needed', {'unnecessary': false}]
    no-unreachable: 2
    no-invalid-regexp: 2
    use-isnan: 2

    # Best practices
    block-scoped-var: 2
    curly: [1, 'multi-line']
    default-case: 2
    eqeqeq: [2, 'smart']
    guard-for-in: 1
    no-alert: 2
    no-caller: 2
    no-eval: 2
    no-extend-native: 2
    no-floating-decimal: 2
    no-undef: 2
    no-with: 2
    no-redeclare: 2
    no-proto: 2
    no-sequences: 2
    wrap-iife: [2, 'inside']
    yoda: 2

    # Variables
    no-shadow: 1
    no-shadow-restricted-names: 2
    no-use-before-define: [2, 'nofunc']

    # Strict Mode
    strict: [2, 'global']

    # Node.js
    no-mixed-requires: 2
    no-process-exit: 0
    handle-callback-err: 1

    # Stylistic issues
    indent: [1, 4, {"SwitchCase": 1}]
    brace-style: [2, "1tbs", { "allowSingleLine": true }]
    camelcase: 0
    comma-spacing: 2
    comma-style: [2, 'last']
    new-cap: 0
    no-lonely-if: 2
    no-mixed-spaces-and-tabs: 2
    no-trailing-spaces: 0
    no-underscore-dangle: 0
    key-spacing: 2
    semi: [2, 'always']
    semi-spacing: 2
    keyword-spacing: 2
    object-curly-spacing: [2, 'never']
    space-infix-ops: 2
    quotes: [2, single, 'avoid-escape']
    eol-last: 2
