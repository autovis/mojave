ecmaFeatures:
    ecmascript: 6

env:
    amd: true
    browser: true
    node: true

globals:
    _: true

rules:
    # Possible errors
    no-console: 1
    no-extra-parens: 2
    no-irregular-whitespace: 2
    no-reserved-keys: 2

    # Best practices
    block-scoped-var: 2
    curly: [2, 'multi-line']
    default-case: 2
    eqeqeq: [2, 'smart']
    guard-for-in: 1
    no-alert: 2
    no-caller: 2
    no-eval: 2
    no-extend-native: 2
    no-floating-decimal: 2
    no-undef: 2
    no-with: 2
    wrap-iife: [2, 'inside']

    # Variables
    no-shadow: 1
    no-shadow-restricted-names: 2
    no-use-before-define: [2, 'nofunc']

    # Strict Mode
    strict: [2, 'global']

    # Node.js
    no-mixed-requires: 2
    no-process-exit: 1

    # Stylistic issues
    indent: 2
    brace-style: 2
    camelcase: 0
    comma-spacing: 2
    comma-style: [2, 'last']
    new-cap: 1
    no-lonely-if: 2
    no-mixed-spaces-and-tabs: 2
    no-trailing-spaces: 2
    no-underscore-dangle: 0
    semi: [2, 'always']
    semi-spacing: 2
    space-after-keywords: 2
    space-in-brackets: [2, 'never']
    space-infix-ops: 2
    quotes: [2, single, 'avoid-escape']
